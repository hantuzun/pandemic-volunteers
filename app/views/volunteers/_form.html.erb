<%= simple_form_for volunteer, url: '/#apply', method: :post do |f| %>
  <%= f.input :country,
    as: :select,
    label: false,
    collection: countries,
    :selected => 'US',
    input_html: {
      data: {
        country_code: "true",
        remote: :true,
        url: "/country-code",
      }
    }
  %>

  <%= f.input :state,
    label: false,
    collection: states,
    :selected => 'NY'
  %>

  <%= f.input :city,
    label: false,
    collection: cities,
    :selected => 'New York'
  %>

  <%= f.input :name,
    label: false,
    required: true,
    input_html: {
      oninvalid: "this.setCustomValidity('#{t('.errors.name')}')",
      oninput: "setCustomValidity('')"
    }
  %>

  <%= f.input :email,
    label: false,
    required: true,
    input_html: {
      autocomplete: 'email',
      minlength: 7,
      oninvalid: "this.setCustomValidity('#{t('.errors.email')}')",
      oninput: "setCustomValidity('')"
    }
  %>

  <%= f.input :phone,
    label: false,
    required: true,
    input_html: {
      autocomplete: 'tel',
      minlength: 4,
      oninvalid: "this.setCustomValidity('#{t('.errors.phone')}')",
      oninput: "setCustomValidity('')"
    }
  %>

  <%= f.input :crew,
    label: false,
    collection: volunteer_crews,
    prompt: t(".defaults.crew_collection")
  %>

  <%= f.input :about,
    label: false,
    required: true,
    as: :text,
    input_html: {
      minlength: 20,
      oninvalid: "this.setCustomValidity('#{t('.errors.about')}')",
      oninput: "setCustomValidity('')"
    }
  %>

  <%= f.button :submit,
    t(".cta"),
    id: 'volunteer_submit',
    class: "btn-danger btn-block btn-lg font-weight-bold shadow"
  %>

  <%= render 'common/consent_notice' %>
<% end %>
