<%= javascript_pack_tag 'notie', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_pack_tag 'notie', 'data-turbolinks-track': 'reload' %>

<%= content_tag(:script) do %>
  <% flash.each do |type, message| %>
    notie.alert({ type: '<%= notie_flash_class("#{type}") %>', text: '<%= message.html_safe %>', time: 5})
  <% end %>
<% end %>